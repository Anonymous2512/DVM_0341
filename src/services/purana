import React, { useState, useEffect } from 'react';
import getBooks from './bookAPI';
import openBookPage from './singlebook';
import './BookList.css';

const BookList = () => {
    const [books, setBooks] = useState([]);
    const [loading, setLoading] = useState(true);
    const [searchQuery, setSearchQuery] = useState('');

    useEffect(() => {
        const fetchBooks = async () => {
            try {
                const data = await getBooks();
                console.log('Books data:', data);
                const booksData = data.results;
                setBooks(booksData);
                setLoading(false);
            } catch (error) {
                console.error(error);
            }
        };

        fetchBooks();
    }, []);

    const handleOpenBookPage = (workId) => {
        openBookPage(workId);
    };

    const handleSearchChange = (event) => {
        setSearchQuery(event.target.value);
    };

    return (
        <div className="app">
            <h1>Book List</h1>
            <div className="search-bar">
                <input
                    type="text"
                    placeholder="Search books..."
                    value={searchQuery}
                    onChange={handleSearchChange}
                />
            </div>
            {loading ? (
                <p>Loading...</p>
            ) : (
                <div className="book-list">
                    {books.map((book) => (
                        <div
                            key={book.work_id}
                            className="book-container"
                            onClick={() => handleOpenBookPage(book.work_id)}
                        >
                            <div className="book-details">
                                <div className="detail">
                                    <strong>Title:</strong> {book.title}
                                </div>
                                <div className="detail">
                                    <strong>Authors:</strong> {book.authors.join(', ')}
                                </div>
                                <div className="detail">
                                    <strong>Language:</strong> {book.language}
                                </div>
                                <div className="detail">
                                    <strong>Published:</strong> {book.copyright}
                                </div>
                                <div className="detail">
                                    <strong>Min Age:</strong> {book.min_age}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )}
        </div>
    );
};

export default BookList;
// BookList.js